{
  "name": "sneaker-city-backend",
  "version": "1.0.0",
  "description": "Sneaker City is a brand new online only store for sneaker enthusiasts",
  "main": "index.js",
  "repository": "https://github.com/nignanthomas/sneaker-city-backend.git",
  "author": "nignanthomas <nignanthomas@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=development babel-watch src/index.js",
    "production": "npm run db:migrate && NODE_ENV=production babel src --out-dir build --copy-files && node build/index.js",
    "db:refresh": "NODE_ENV=production sequelize db:migrate:undo:all && sequelize db:migrate && sequelize db:seed:all",
    "db:seed": "NODE_ENV=production sequelize db:seed:all",
    "db:migrate": "NODE_ENV=production sequelize db:migrate",
    "migrate": "NODE_ENV=test sequelize db:migrate",
    "rollback": "NODE_ENV=test sequelize db:migrate:undo:all",
    "seed": "NODE_ENV=test sequelize db:seed:all",
    "test": "npm run rollback && npm run migrate && npm run seed &&  npm run test-suite",
    "test-suite": "NODE_ENV=test mocha src/tests/index.spec.js --require @babel/register --timeout 20000 --exit"
  },
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.14.5",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "path": "^0.12.7",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.4",
    "regenerator-runtime": "^0.13.7",
    "sequelize": "^6.6.2",
    "sequelize-cli": "^6.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.5",
    "@babel/preset-env": "^7.14.5",
    "@babel/register": "^7.14.5",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "mocha": "^9.0.0"
  }
}
